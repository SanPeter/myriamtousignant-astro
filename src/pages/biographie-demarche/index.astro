---
import { getCollection, render, getEntry } from 'astro:content';
import { Image } from 'astro:assets';
import GenericLayout from '../../layouts/GenericLayout.astro';

// Récupération de la biographie
const biographieEntries = await getCollection('biographie-demarche');
const biographie = biographieEntries.find(entry => entry.id === 'index.md') || biographieEntries[0];
const { Content, headings } = await render(biographie);

---

<GenericLayout 
  title={biographie?.data.title || "Biographie & Démarche"}
  description={biographie?.data.description}
  showCarousel={false}
  showGridProjets={false}
>
  <div class="bg-white p-6 rounded-lg shadow-md">
      
    <div class="prose max-w-none prose-h2:text-2xl">
      <Content />
    </div>
  </div>
</GenericLayout>
