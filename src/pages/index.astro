---
import "../styles/global.css";
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Myriam Tousignant</title>

    <style>
        /* Custom styles for the navigation toggle */
        #menu-toggle:checked + #menu {
            display: block;
        }

        /* Hide checkbox */
        #menu-toggle {
            display: none;
        }

        .no-scroll {
            overflow: hidden;
        }
    </style>    
</head>
<body>

<!-- Header -->
<header class="bg-gray-100 p-4 flex justify-between items-center">
    <div class="text-2xl font-bold uppercase">Brand</div>

    <!-- Mobile Menu Button -->
    <div class="block md:hidden">
        <input type="checkbox" id="menu-toggle" class="hidden">
        <label for="menu-toggle" class="cursor-pointer">
            <svg id="menu-icon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
            </svg>
            <svg id="close-icon" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
        </label>
    </div>

    <!-- Links for Desktop -->
    <nav class="hidden md:flex space-x-4">
        <a href="#" class="text-base">Link</a>
        <a href="#" class="text-base">Link</a>
        <a href="#" class="text-base">Link</a>
    </nav>
</header>

<!-- Mobile Menu -->
<div id="menu" class="hidden fixed inset-0 bg-gray-100 flex flex-col items-center justify-center space-y-4 md:hidden mt-16">
    <a href="#" class="text-xl">Link</a>
    <a href="#" class="text-xl">Link</a>
    <a href="#" class="text-xl">Link</a>
</div>

    <!-- Image List -->
    <main>
        <div>
            <div>
                <img src="https://placehold.co/922x615" alt="Placeholder Image">
            </div>
             <div>
                <img src="https://placehold.co/922x615" alt="Placeholder Image">
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="flex flex-col md:flex-row">
    </footer>


<script>
    // JavaScript to toggle between menu and close icons
    const menuToggle = document.getElementById('menu-toggle');
    const menuIcon = document.getElementById('menu-icon');
    const closeIcon = document.getElementById('close-icon');
    const menu = document.getElementById('menu');
    const body = document.body;

    menuToggle.addEventListener('change', () => {
        if (menuToggle.checked) {
            menuIcon.classList.add('hidden');
            closeIcon.classList.remove('hidden');
            menu.classList.remove('hidden');
            body.classList.add('no-scroll');
        } else {
            menuIcon.classList.remove('hidden');
            closeIcon.classList.add('hidden');
            menu.classList.add('hidden');
            body.classList.remove('no-scroll');
        }
    });
</script>

</body>
</html>