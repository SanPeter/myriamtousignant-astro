---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

// Récupération des contenus mis en avant
const projets = await getCollection('projets', entry => entry.data.featured && !entry.data.draft);
const expositions = await getCollection('expositions', entry => entry.data.featured && !entry.data.draft);
const artPublic = await getCollection('art-public', entry => entry.data.featured && !entry.data.draft);
---

<BaseLayout title="Accueil">
  <!-- Hero Section -->
  <section class="relative">
    <div class="bg-gradient-to-r from-indigo-500 to-blue-600 h-96 flex items-center">
      <div class="container mx-auto px-6">
        <h1 class="text-4xl md:text-5xl font-bold text-white leading-tight">
          Myriam Tousignant
        </h1>
        <p class="text-xl md:text-2xl text-white mt-4 max-w-2xl">
          Artiste multidisciplinaire | Arts visuels, art public, installations, livres d'artiste et médiations culturelles
        </p>
        <div class="mt-8">
          <a href="/biographie-demarche" class="bg-white text-blue-600 hover:bg-gray-100 py-3 px-6 rounded-md font-semibold transition-colors">
            Découvrir ma démarche
          </a>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Projets Récents -->
  <section class="py-12 bg-gray-50">
    <div class="container mx-auto px-6">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-3xl font-bold">Projets en vedette</h2>
        <a href="/projets" class="text-blue-600 hover:underline inline-flex items-center">
          Tous les projets
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projets.slice(0, 3).map(projet => (
          <a href={`/projets/${projet.id.replace(/\.md$/, '')}`} class="bg-white rounded-lg shadow hover:shadow-md transition-shadow duration-200 overflow-hidden">
            {projet.data.summaryImage && (
              <img 
                src={projet.data.summaryImage} 
                alt={projet.data.title} 
                class="w-full h-48 object-cover"
              />
            )}
            <div class="p-4">
              <h3 class="text-xl font-semibold">{projet.data.title}</h3>
              {projet.data.description && (
                <p class="mt-2 text-gray-600 line-clamp-2">{projet.data.description}</p>
              )}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Expositions -->
  <section class="py-12 bg-white">
    <div class="container mx-auto px-6">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-3xl font-bold">Expositions récentes</h2>
        <a href="/expositions" class="text-blue-600 hover:underline inline-flex items-center">
          Toutes les expositions
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {expositions.slice(0, 3).map(expo => (
          <a href={`/expositions/${expo.id.replace(/\.md$/, '')}`} class="bg-white rounded-lg border border-gray-200 hover:border-blue-500 transition-colors duration-200 overflow-hidden">
            {expo.data.summaryImage && (
              <img 
                src={expo.data.summaryImage} 
                alt={expo.data.title} 
                class="w-full h-48 object-cover"
              />
            )}
            <div class="p-4">
              <h3 class="text-xl font-semibold">{expo.data.title}</h3>
              {expo.data.location && (
                <p class="text-sm text-gray-600 mt-1">{expo.data.location}</p>
              )}
              {expo.data.startDate && (
                <p class="text-sm text-gray-600">
                  {expo.data.startDate.toLocaleDateString('fr-CA')}
                  {expo.data.endDate && ` au ${expo.data.endDate.toLocaleDateString('fr-CA')}`}
                </p>
              )}
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Art Public -->
  {artPublic.length > 0 && (
    <section class="py-12 bg-gray-50">
      <div class="container mx-auto px-6">
        <div class="flex justify-between items-center mb-8">
          <h2 class="text-3xl font-bold">Art Public</h2>
          <a href="/art-public" class="text-blue-600 hover:underline inline-flex items-center">
            Voir toutes les œuvres
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          {artPublic.slice(0, 2).map(art => (
            <a href={`/art-public/${art.id.replace(/\.md$/, '')}`} class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow duration-200 overflow-hidden">
              <div class="flex flex-col md:flex-row">
                {art.data.summaryImage && (
                  <div class="md:w-2/5">
                    <img 
                      src={art.data.summaryImage} 
                      alt={art.data.title} 
                      class="w-full h-full object-cover"
                    />
                  </div>
                )}
                <div class="p-6 md:w-3/5">
                  <h3 class="text-xl font-semibold">{art.data.title}</h3>
                  {art.data.description && (
                    <p class="mt-2 text-gray-600">{art.data.description}</p>
                  )}
                  <div class="mt-4">
                    <span class="inline-flex items-center text-blue-600">
                      En savoir plus
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-1" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                      </svg>
                    </span>
                  </div>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}
  
  <!-- Call to Action -->
  <section class="py-16 bg-blue-600 text-white">
    <div class="container mx-auto px-6 text-center">
      <h2 class="text-3xl font-bold mb-4">Vous avez un projet artistique?</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        Contactez-moi pour discuter de collaborations, acquisitions ou médiations culturelles.
      </p>
      <a 
        href="mailto:contact@myriamtousignant.com" 
        class="bg-white text-blue-600 hover:bg-gray-100 py-3 px-8 rounded-md font-semibold text-lg inline-block transition-colors"
      >
        Écrivez-moi
      </a>
    </div>
  </section>
</BaseLayout>